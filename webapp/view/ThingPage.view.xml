<mvc:View
  xmlns:html="http://www.w3.org/1999/xhtml"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:iot="sap.ui.iot.controls"
  xmlns:m="sap.m" xmlns:core="sap.ui.core"
  xmlns:suite="sap.suite.ui.commons" xmlns="sap.uxap"
  xmlns:semantic="sap.m.semantic"
  xmlns:layout="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
  xmlns:viz="sap.viz.ui5.controls"
  xmlns:iotele="sap.ui.iot.elements"
  xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
  controllerName="webapp.controller.ThingPage"
  displayBlock="true">

  <layout:FixFlex id='chartFixFlex' minFlexSize="250">
    <!--Below is the setting panel -->
    <layout:fixContent>
      <m:Panel id='settingsPanel' class="panelStyle" expandable="true" expanded="true" headerText="Settings" width="auto">
        <m:content>
          <m:HBox class='settingsHBox'>
            <m:VBox width="200px">
              <m:Label text = '{/chartType/name}' design="Bold" class='settingsLabel'></Label>
              <m:Select id='chartTypeSelect' class='settingsSelect' selectedKey='{/chartType/defaultSelected}' maxWidth="150px" change='onChartTypeChanged'
                items="{path: '/chartType/values'}">
                <items>
                  <m:core:Item text="{name}" key="{key}" />
                </items>
              </m:Select>
            </m:VBox>
          </m:HBox>
        </m:content>
      </m:Panel>
    </layout:fixContent>
</layout:FixFlex>
  </mvc:View>
