<mvc:View
  xmlns:html="http://www.w3.org/1999/xhtml"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:iot="sap.ui.iot.controls"
  xmlns:m="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:suite="sap.suite.ui.commons"
  xmlns="sap.m"
  xmlns:semantic="sap.m.semantic"
  xmlns:layout="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
  xmlns:viz="sap.viz.ui5.controls"
  xmlns:iotele="sap.ui.iot.elements"
  xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
  controllerName="webapp.controller.ThingPage"
  displayBlock="true">

  <Page title="Page" enableScrolling="false">
		<content>
			<iot:IoTChart thingId = "<thingId>" id="idChart" noOfHours="24" isSliderVisible="true">
			<events>
			<iotele:IoTEventsOnChartElement eventStatus="<status string>" eventProperty="<property String>" eventDescription="<description string>"
								eventId="<eventId string>" businessTimeStamp="<date Object>" severity="1<integer>"/>
			</events>
			</iot:IoTChart>
		</content>
	</Page>
</mvc:View>
